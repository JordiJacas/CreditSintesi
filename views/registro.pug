extends layout 

block content

 div(class='row')
   div(class='col-md-4')
   div(class='col-md-4')
      div(class='panel-heading text-center')= 'REGISTRO'
      div(class='panel-body')
        form(action='/signup' method='post')
         
         div(class='form-group')
          label(for="name")= 'Nombre'
          input(id='name' type='name' name='name' placeholder='Nombre' class='form-control' required)

          br

          label(for="email")= 'Email'
          input(id='email' type='email' name='email' placeholder='Email' class='form-control' required)
          
          br

          label(for="password")= 'Password'
          input(id='password' type='password' name='password' placeholder='Password' class='form-control' required)
          
         div(class='form-group text-center')
          input(type="submit" class='btn btn-primary' value='Registrarme')